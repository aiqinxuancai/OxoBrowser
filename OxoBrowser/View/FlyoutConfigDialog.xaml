<ui:ContentDialog
    x:Class="OxoBrowser.View.FlyoutConfigDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OxoBrowser.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="设置"
    d:DesignHeight="300"
    d:DesignWidth="300"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    CloseButtonText="取消"
    DialogMaxWidth="750"
    PrimaryButtonText="应用"
    mc:Ignorable="d">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:FlyoutConfigDialog}" />
    </ui:ContentDialog.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <Grid Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="代理服务器" />
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="textConfigIP" Grid.Column="0" />
                        <TextBox
                            x:Name="textConfigPort"
                            Grid.Column="1"
                            Margin="8,0,0,0" />
                        <Button
                            x:Name="buttonUseSystemProxy"
                            Grid.Column="2"
                            Margin="10,0,0,0"
                            Click="ButtonUseSystemProxy_Click"
                            Content="使用系统代理" />
                    </Grid>
                </Grid>

                <Separator Margin="0,12,0,12" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="游戏类型" />
                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <RadioButton x:Name="KanColleRadio" Content="KanColle" />
                        <RadioButton x:Name="ToukenRadio" Content="Touken" />
                    </StackPanel>
                </Grid>

                <Separator Margin="0,12,0,12" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="主题" />
                    <ComboBox
                        x:Name="comboBoxTheme"
                        Grid.Column="1"
                        Width="220"
                        HorizontalAlignment="Left"
                        SelectionChanged="ComboBoxTheme_SelectionChanged">
                    <ComboBoxItem Content="Latte (浅色)" />
                    <ComboBoxItem Content="Frappe (柔暗)" />
                </ComboBox>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:ContentDialog>
